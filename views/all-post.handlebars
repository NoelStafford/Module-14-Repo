{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-6">
        <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        {{!-- displays the user and date of when a post was made --}}
        <span>
            <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
        </span>
    </div>
    <div class="col-md-7">
        <p>
            {{!-- displays the content of the post --}}
            {{post.content}}
        </p>
    </div>
</div>
{{/each}}